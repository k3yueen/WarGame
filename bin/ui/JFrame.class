package ui;
import javax.swing.*;

public class GameFrame extends JFrame {
   private GamePanel gamePanel;
   
   //Creates the main game window
   public GameFrame(GameController controller) {
       super("Card Game"); //Sets window title
       setExtendedState(JFrame.MAXIMIZED_BOTH); //Makes the background fullscreen
       setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //Exit when closed
       
       add(gamePanel = new GamePanel(controller)); //Add game area
       setJMenuBar(new MenuBar(controller)); //Add menu bar
       setVisible(true); //Show window
   }
   
   //Get the game panel
   public GamePanel getGamePanel() { return gamePanel; }
   //Set the game panel
   public void setGamePanel(GamePanel gamePanel) { this.gamePanel = gamePanel; }
   
   //Print window info for debugging
   public void printInfo() {
       System.out.println("Game Frame Info:\nTitle: " + getTitle() + "\nSize: " + getSize());
   }
}
